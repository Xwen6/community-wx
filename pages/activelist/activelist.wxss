.detail-fen {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  border-bottom: 1px dashed #ccc;
  display: flex;
  justify-content: space-around;
}

.detail-fen>view:first-child {
  flex: 1;
  display: flex;
  padding-left:20rpx;
}

.detail-fen>view:first-child>image {
  width: 35rpx;
  height: 35rpx;
  margin-right: 10rpx;
  margin-top: 12rpx;
}

.detail-fen>view:first-child>view {
  font-size: 28rpx;
  color: #333;
}

.detail-fen>view:last-child {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  padding-right:20rpx ;
}

.detail-fen>view:last-child>image {
  width: 35rpx;
  height: 35rpx;
  margin-right: 10rpx;
  margin-top: 13rpx;
}

.detail-fen>view:last-child>view {
  font-size: 24rpx;
  color: #999;
}


.mask{
	width: 100%;
	height: 100vh;
	position: fixed;
	top: -2000rpx;
	left: 0;
	z-index: 9999;
	transition: all .5s;
}
.mask-block{
	width: 100%;
	height: 100%;
	background: rgba(0,0,0,.6);
}
.mask-nr{
	width: 600rpx;
	height: 700rpx;
	background: #fff;
	position: absolute;
	top: 250rpx;
	left: 0;
	right: 0;
	z-index: 9999;
	margin: 0 auto;
	border-radius: 10rpx;
}
.mask-nr>view:first-child{
	font-size: 28rpx;
	color: #000;
	line-height: 90rpx;
	border-bottom: 1px solid #ccc;
	text-align: center;
}
.mask-nr-mz{
 width: 100%;
 height: 550rpx;
 overflow-y:scroll;
}
.mask-n-one{
	width: 100%;
	height: 70rpx;
	line-height: 70rpx;
	border-bottom: 1px solid #eee;
	display:flex;
}
.mask-n-one>image:first-child{
	width: 30rpx;
	height: 30rpx;
	margin: 20rpx 10rpx 20rpx 20rpx;
}
.mask-n-one>view{
	flex: 1;
	font-size: 24rpx;
	color: #333;
}
.mask-n-one>image:last-child{
	width: 15rpx;
	height: 20rpx;
	margin: 25rpx 20rpx 25rpx 20rpx;
}
.mask-n-bottom{
	width: 100%;
	height: 60rpx;
	line-height: 60rpx;
	font-size: 24rpx;
	color: #999;
	border-top: 1px solid #eee;
	text-align: center;
}
.mask-n-gb{
	width: 45rpx;
	height: 45rpx;
	position: absolute;
	top: -30rpx;
	right: -30rpx;
	z-index: 99999;
	padding: 10rpx;
}



