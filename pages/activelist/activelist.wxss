.shops{
  width: 100%;
  height: auto;
}
.activelist {
  width: 100%;
  background: #fff;
  margin-bottom: 30rpx;
}

.active-nr {
  padding: 30rpx 24rpx 0 24rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px dashed #ccc;
  padding-bottom: 20rpx;
}

.active-img {
  width: 288rpx;
  height: 180rpx;
  margin-right: 22rpx;
}

.active-img image {
  width: 100%;
  height: 100%;
}

.active-wz {
  flex: 1;
}

.active-wz>view:first-child {
  width: 100%;
  height: 68rpx;
  line-height: 36rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.active-wz>view:first-child>image {
  width: 110rpx;
  height: 30rpx;
  vertical-align: middle;
  margin-top: -5rpx;
  margin-right: 5rpx;
}

.active-wz view:nth-child(2) {
  font-size: 24rpx;
  color: #999;
  margin: 20rpx 0 20rpx 0;
}

.active-wz view:nth-child(3) {
  font-size: 24rpx;
  color: #999;
  margin: 10rpx 0 20rpx 0;
}

.active-wz view:nth-child(4) {
  font-size: 24rpx;
  color: #df273f;
}
